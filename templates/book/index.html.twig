{# templates/book/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Liste des livres{% endblock %}

{% block body %}
    <h1 class="mb-4">Liste des livres</h1>

    <table class="table table-striped align-middle">
        <thead>
        <tr>
            <th>#</th>
            <th>Titre</th>
            <th>Année de publication</th>
            <th>Ajouté par</th>
            <th class="text-end">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                <td>{{ book.id }}</td>
                <td>{{ book.title }}</td>
                <td>{{ book.publicationYear|default('—') }}</td>
                <td>
                    {% if book.user %}
                        {{ book.user.firstName }} {{ book.user.lastName }}
                    {% else %}
                        <em>Inconnu</em>
                    {% endif %}
                </td>
                <td class="text-end">
                    <a href="{{ path('app_book_show', { id: book.id }) }}" class="btn btn-sm btn-secondary">Voir</a>
                    <a href="{{ path('app_book_edit', { id: book.id }) }}" class="btn btn-sm btn-primary">Éditer</a>
                    <span class="d-inline-block">
              {% include 'book/_delete_form.html.twig' with { book: book } %}
            </span>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="text-center text-muted">Aucun livre pour le moment.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_book_new') }}" class="btn btn-success">Nouveau livre</a>
{% endblock %}
