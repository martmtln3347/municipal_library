{# templates/base.html.twig #}
{# -- Mode sombre/clair depuis cookie -- #}
{% set dark = app.request.cookies.get('myapp_dark_mode') == 'true' %}

<!DOCTYPE html>
<html lang="fr" class="{{ dark ? 'theme-dark' : 'theme-light' }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %}Municipal Library{% endblock %}</title>

    {# Favicon #}
    <link rel="icon" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 128 128'><text y='1.2em' font-size='96'>📚</text></svg>">

    {# Bootstrap CSS #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    {# Styles additionnels (facultatif) : micro-ajustements dark #}
    <style>
        .theme-dark body { background-color: #121212; }
        .theme-dark .card { background-color: #1e1e1e; color: #f1f1f1; }
        .theme-dark .btn-outline-light:hover { color: #212529; }
    </style>

    {% block stylesheets %}{% endblock %}
</head>

<body class="{{ dark ? 'bg-dark text-light' : 'bg-light' }} d-flex flex-column min-vh-100">

<!-- 🌐 Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
    <div class="container">
        <a class="navbar-brand fw-bold" href="{{ path('app_welcome_index') }}">📚 Municipal Library</a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Basculer la navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_welcome_index') }}">Accueil</a>
                </li>

                {% if is_granted('ROLE_USER') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_book_index') }}">Livres</a>
                    </li>
                {% endif %}

                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_user_index') }}">Utilisateurs</a>
                    </li>
                {% endif %}
            </ul>

            <ul class="navbar-nav align-items-lg-center">
                {# Switcher Dark/Light déplacé ICI (pas dans <head>) #}
                <li class="nav-item me-2">
                    <a class="nav-link" href="{{ path('app_theme', {'mode': 'dark'}) }}">Dark</a>
                </li>
                <li class="nav-item me-3">
                    <a class="nav-link" href="{{ path('app_theme', {'mode': 'light'}) }}">Light</a>
                </li>

                {% if app.user %}
                    <li class="nav-item">
                        <span class="navbar-text me-3">
                            👤 {{ app.user.firstName }} {{ app.user.lastName }}
                        </span>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-outline-light btn-sm" href="{{ path('app_logout') }}">Déconnexion</a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="btn btn-light btn-sm" href="{{ path('app_login') }}">Connexion</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>

<!-- 🧱 Contenu principal -->
<main class="container my-5 flex-fill">
    {% block body %}{% endblock %}
</main>

<!-- ⚙️ Footer -->
<footer class="bg-primary text-white text-center py-3 mt-auto">
    <small>&copy; {{ "now"|date("Y") }} - Municipal Library | Projet Symfony SIO</small>
</footer>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
{% block javascripts %}{% endblock %}
</body>
</html>
